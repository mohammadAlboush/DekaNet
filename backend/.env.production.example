# Flask Configuration
FLASK_ENV=production
SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY
JWT_SECRET_KEY=CHANGE_ME_TO_RANDOM_JWT_SECRET_KEY

# Database Configuration
DATABASE_URL=postgresql://dekanet:YOUR_PASSWORD@localhost:5432/dekanet_db

# CORS Settings - Erlaubte Origins (komma-separiert)
CORS_ORIGINS=http://172.16.194.152,http://193.175.86.198

# Security Settings (false fuer HTTP, true fuer HTTPS)
SESSION_COOKIE_SECURE=false
JWT_COOKIE_SECURE=false
